<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.sedgw.pipboy_v11.MainActivity">
    <TextView
        android:id="@+id/time_text"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_size_text"
        android:layout_centerInParent="true"/>
    <!-- Main screen -->
    <LinearLayout
        android:id="@+id/main_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

    </LinearLayout>

    <TextView
        android:id="@+id/start_text"
        android:text="@string/start_text"
        android:textSize="@dimen/medium_size_text"
        android:layout_above="@+id/start_button"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textColor="@color/text"
        android:background="@drawable/appfunc_rename"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageButton
        android:id="@+id/start_button"
        android:layout_width="@dimen/start_button_dp"
        android:layout_height="@dimen/start_button_dp"
        android:background="@null"
        android:layout_centerInParent="true"
        android:src="@drawable/aim"
        android:scaleX="1.6"
        android:scaleY="1.6"/>

    <!-- Bottom Menu -->
    <fragment
        android:name="com.example.sedgw.pipboy_v11.Fragment_Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_menu">
    </fragment>

</RelativeLayout>
